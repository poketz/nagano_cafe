<div class="container">
  <h4 class="ml-3">ジャンル一覧・追加</h4>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row mt-5">
    <%= f.label :name, 'ジャンル名', class: "col-3 col-lg-2 col-form-label" %>
    <%= f.text_field :name, class: "form-control col-4" %>
    <%= f.submit '新規登録', class: "btn btn-success ml-3"  %>
  </div>
  <% end %>
  <table class="table mt-5 col-sm-6">
    <thead class="thead-light">
      <tr>
        <th class="pl-5">ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
    </tr>
    <% end %>
  </table>
</div>
