<div class="container">
  <h4 class="ml-3">ジャンル編集</h4>
  <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="row mt-5" >
      <%= f.label :name, 'ジャンル名', class: "col-3 col-lg-2 col-form-label" %>
      <%= f.text_field :name, class: "form-control col-4 mr-5" %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
