<div class="container">
  <h4 class="ml-3">商品詳細</h4>
  <div class="row mt-5">
    <%= image_tag @item.image, class: "img-fluid col-lg-6" %>
    <table class="table col-lg-6 col-md-9 mt-lg-3 mt-5 mx-4">
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)</td>
        <td><%= @item.with_tax_price.to_s(:delimited) %> 
            (<%= @item.price.to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><% if @item.is_active == true %>
              <span class="text-success font-weight-bold">販売中</span>
            <% else %>
              <span class="text-secondary font-weight-bold">販売停止中</span>
            <% end %></td>
      </tr>
    </table>
  </div>
  <div class="row justify-content-center mt-5">
    <%= link_to '編集する', edit_admin_item_path, class: "btn btn-success px-4 mb-5" %>
  </div>
</div>
