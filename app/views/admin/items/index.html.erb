<h1>商品一覧</h1>
<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.genre %></td>
    <td><%= if item.is_active.any? %>
          <span>販売中</span>
        <% else %>
          <span>販売停止中</span>
        <% end %></td>
  </tr>
  <% end %>
</table>