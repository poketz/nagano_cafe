<div class="container">
  <h4 class="ml-3">管理者ログイン</h4>

  <%= form_with model: @admin, url: admin_session_path, class: "offset-lg-2 offset-1" do |f| %>
    <div class="row form-group mt-5">
      <%= f.label :email, "メールアドレス", class: "col-md-3 col-lg-2 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6 col-10 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :password, "パスワード", class: "col-md-3 col-lg-2 col-form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-md-6 col-10 form-control" %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-primary offset-3 px-4 mt-3" %>
  <% end %>
</div>
