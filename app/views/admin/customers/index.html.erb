<h1>会員一覧</h1>
<table>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td><%= link_to admin_customer_path(customer.id) do %>
          <%= customer.first_name %><%= customer.last_name %></td>
        <% end %>
    <td><%= customer.email %></td>
    <td><% if customer.is_deleted == false %>
          <span>有効</span>
        <% else %>
          <span>退会</span>
        <% end %></td>
  </tr>
  <% end %>
</table>
