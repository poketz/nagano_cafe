<h1>会員一覧</h1>
<table>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td><%= customer.name %></td>
    <td><%= customer.mail %></td>
    <td><% if customer.is_deleted == true %>
          <span>有効</span>
        <% else %>
          <span>退会</span>
        <% end %></td>
  </tr>
  <% end %>
</table>
