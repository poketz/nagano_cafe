<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h1>

<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.first_name %> <%= @customer.last_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td><% if @customer.is_deleted == false %>
          <span>有効</span>
        <% else %>
          <span>退会</span>
        <% end %></td>
  </tr>
</table>

<%= button_to "編集する", {controller: "admin/customers", action: "edit"}, {method: :get } %>
<%= button_to "注文履歴一覧を見る", {controller: "admin/homes", action: "top"}, {method: :get } %>