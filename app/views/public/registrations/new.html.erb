 <div class="container mb-5">
  <h4 class="ml-3 mb-4">新規会員登録</h4>

  <%= form_with model: @customer, url: customer_registration_path, class: "px-3" do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <%= f.label :first_name, "氏名", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4 form-group">
        <%= f.text_field :first_name, class: " form-control" %>
      </div>
      <div class="col-lg-3 col-md-4 form-group">
        <%= f.text_field :last_name, class: " form-control" %>
      </div>
    </div>
    <div class="row">
      <%= f.label :first_name_kana, "フリガナ", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4 form-group">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
      <div class="col-lg-3 col-md-4 form-group">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-md-3" %>
      <div class="col-lg-6 col-md-8">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>


    <div class="form-group row">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-md-3" %>
      <div class="col-lg-3 col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    
    <div class="d-flex justify-content-center">
      <%= f.submit "新規登録", class: "btn btn-success px-5 mb-3 col-5" %>
    </div>
  
  <% end %>

  <%= render "public/shared/links" %>
</div>
