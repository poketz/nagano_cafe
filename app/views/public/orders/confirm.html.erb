<h2>注文情報確認</h2>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tboody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.image, width: 50 %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total_price += cart_item.subtotal %>
    </tr>
    <% end %>
  </tboody>
</table>

<table>  
  <tr>
    <td>送料</td>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= @total_price %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td><%= @order.postage + @total_price %></td>
  </tr>
</table>