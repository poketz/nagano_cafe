<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customer_path(@customer.id) do |f| %>
  <div class="field">
    <%= f.label :first_name, "氏名" %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "フリガナ" %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :address, "住所"%><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)"%><br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email , "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= button_to '退会する', customers_confirm_path, method: :get %>
