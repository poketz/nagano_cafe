<h2>マイページ</h2>
<strong>登録情報</strong>
<%= button_to '編集する', edit_customer_path(params[:id]), method: :get %>

<table>
  <tr>
    <td>氏名</td>
    <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
</table>

<strong>配送先</strong>
<%= button_to '一覧を見る', addresses_path, method: :get %>
<strong>注文履歴</strong>
<%= button_to '一覧を見る', orders_path, method: :get %>