<h2>配送先登録/一覧</h2>
<%= form_with model: @address, url: addresses_path do |f| %>
  郵便番号(ハイフンなし)<%= f.text_field :postal_code %><br>
  住所<%= f.text_field :address %><br>
  宛名<%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= button_to '編集する', edit_address_path(address.id), method: :get %>
      <%= button_to '削除する', address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
