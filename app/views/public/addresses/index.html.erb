<div class="container">
  <h4>配送先登録/一覧</h4>
  <%= form_with model: @address, url: addresses_path, class: "px-3 mb-5" do |f| %>
    <div class="row form-group mt-5">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-lg-3" %>
      <%= f.text_field :postal_code, class: "col-lg-3 col-md-4 form-control" %>
    </div>
    <div class="row form-group">
      <%= f.label :address, "住所", class: "col-lg-3 " %>
      <%= f.text_field :address, class: "col-lg-6 col-md-8 form-control" %>
    </div>
    <div class="row form-group">
      <%= f.label :name, "宛名", class: "col-lg-3" %>
      <%= f.text_field :name, class: "col-lg-3 col-md-4 form-control" %>
    </div>

    <%= f.submit '新規登録', class: "btn btn-success px-4" %>
  <% end %>

  <table class="table table-bordered ">
    <thead class="thead-light">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to '編集する', edit_address_path(address.id), method: :get, class: "btn btn-success btn-sm" %>
        <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>